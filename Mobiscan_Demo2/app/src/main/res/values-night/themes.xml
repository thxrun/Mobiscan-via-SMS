<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Mobiscan_Demo2" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/neon_pink</item>
        <item name="colorPrimaryVariant">@color/neon_purple</item>
        <item name="colorOnPrimary">@color/cyber_black</item>
        
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/neon_cyan</item>
        <item name="colorSecondaryVariant">@color/neon_green</item>
        <item name="colorOnSecondary">@color/cyber_black</item>
        
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/cyber_black</item>
        <item name="android:windowLightStatusBar">false</item>
        
        <!-- Background colors -->
        <item name="android:colorBackground">@color/cyber_black</item>
        <item name="colorSurface">@color/cyber_dark_gray</item>
        <item name="colorOnSurface">@color/text_primary</item>
        
        <!-- Text colors -->
        <item name="android:textColorPrimary">@color/text_primary</item>
        <item name="android:textColorSecondary">@color/text_secondary</item>
        
        <!-- Card and elevation -->
        <item name="cardBackgroundColor">@color/cyber_gray</item>
        <item name="elevationOverlayEnabled">true</item>
        

    </style>
</resources>